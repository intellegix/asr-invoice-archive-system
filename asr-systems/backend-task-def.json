{
  "family": "asr-records-backend-working",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::206362095382:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::206362095382:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "206362095382.dkr.ecr.us-west-2.amazonaws.com/asr-records-backend-dev:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "DEBUG", "value": "false"},
        {"name": "API_HOST", "value": "0.0.0.0"},
        {"name": "API_PORT", "value": "8000"},
        {"name": "LOG_LEVEL", "value": "INFO"},
        {"name": "STORAGE_BACKEND", "value": "local"},
        {"name": "DATA_DIR", "value": "/app/data"},
        {"name": "DATABASE_URL", "value": "sqlite:///./asr_records.db"},
        {"name": "MULTI_TENANT_ENABLED", "value": "false"},
        {"name": "SCANNER_API_ENABLED", "value": "true"},
        {"name": "MAX_SCANNER_CLIENTS", "value": "10"},
        {"name": "CORS_ALLOWED_ORIGINS", "value": "http://localhost:3000,http://localhost:5173,http://asr-records-alb-757932068.us-west-2.elb.amazonaws.com"}
      ],
      "secrets": [
        {
          "name": "ANTHROPIC_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:206362095382:secret:asr-records/anthropic-api-key"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-west-2:206362095382:secret:asr-records/database-url"
        }
      ],
      "stopTimeout": 30,
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/live || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 15
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/asr-records-legacy-backend-dev",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
