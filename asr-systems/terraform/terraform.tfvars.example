# ASR Records — Terraform Variable Values
# Copy to terraform.tfvars and fill in actual values before running terraform apply.

# ---------- Global ----------

environment = "dev"

# ---------- Networking (RDS) ----------

vpc_id               = "vpc-0123456789abcdef0"
private_subnet_ids   = ["subnet-aaa111", "subnet-bbb222"]
ecs_security_group_id = "sg-0123456789abcdef0"

# ---------- Database ----------

# Sensitive — do NOT commit real values. Use TF_VAR_db_password env var instead.
# db_password = ""

# ---------- CloudWatch ----------

ecs_cluster_name        = "asr-records-legacy-cluster-dev"
backend_service_name    = "backend-service"
alarm_sns_topic_arn     = ""                  # Leave empty to skip alarm actions
alb_arn_suffix          = ""                  # e.g. "app/asr-records-alb/1234567890"
target_group_arn_suffix = ""                  # e.g. "targetgroup/asr-backend-tg/abcdef123456"

# ---------- SNS ----------

alert_email = ""                              # e.g. "ops@example.com"
