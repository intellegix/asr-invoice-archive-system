# ASR Invoice Archive System - Environment Configuration
# Copy this file to .env and customize for your environment

# ==============================================================================
# BASIC APPLICATION SETTINGS
# ==============================================================================

# Debug mode (true for development, false for production)
DEBUG=false

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================================================
# CLAUDE AI INTEGRATION
# ==============================================================================

# Anthropic API key for Claude AI services
# Required for document classification and processing
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Database connection string
# For SQLite (local development):
DATABASE_URL=sqlite:///./data/invoice_archive.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/invoice_archive

# Database connection pool settings
DB_POOL_SIZE=20
DB_POOL_OVERFLOW=0
DB_POOL_RECYCLE=3600

# ==============================================================================
# STORAGE CONFIGURATION
# ==============================================================================

# Storage backend (local or render_disk)
STORAGE_BACKEND=local

# Render disk mount path (for Render.com deployment)
RENDER_DISK_MOUNT=/data

# ==============================================================================
# DOCUMENT CONSOLIDATION CONFIGURATION
# ==============================================================================

# Source directories to consolidate (comma-separated list)
# These are the directories containing documents to be consolidated into QB Organized structure
CONSOLIDATION_SOURCE_DIRS=C:/Users/AustinKidwell/ASR Dropbox/Austin Kidwell/08_Financial_PayrollOperations/Digital Billing Records,C:/Users/AustinKidwell/ASR Dropbox/Austin Kidwell/08_Financial_PayrollOperations/Digital Billing Apps/ASR Records APP 2.0/ASR Records App/Digital Billing Records

# Target directory for consolidated documents (QB Organized structure)
# This is where all documents will be consolidated with proper QB folder structure
CONSOLIDATION_TARGET_DIR=C:/Users/AustinKidwell/ASR Dropbox/Austin Kidwell/08_Financial_PayrollOperations/Digital Billing Records (QB Organized)

# Number of documents to process in each consolidation batch
# Smaller batches = safer but slower, larger batches = faster but use more memory
CONSOLIDATION_BATCH_SIZE=50

# Directory for consolidation safety backups
# Critical: Always backup before consolidation for rollback capability
CONSOLIDATION_BACKUP_DIR=./consolidation_backups

# Maximum parallel workers for consolidation processing
# Should not exceed number of CPU cores, recommended: 4-8
CONSOLIDATION_MAX_WORKERS=4

# Sample size for verification quality assurance testing
# Higher values = better accuracy verification but slower processing
CONSOLIDATION_SAMPLE_SIZE=100

# Legacy QB billing directory paths (for existing QB Organized structure)
# Open billing documents path (unpaid invoices, bills, etc.)
LEGACY_OPEN_BILLING_DIR=C:/Users/AustinKidwell/ASR Dropbox/Austin Kidwell/08_Financial_PayrollOperations/Digital Billing Records (QB Organized)/Open Billing

# Closed billing documents path (paid/closed invoices, receipts, etc.)
LEGACY_CLOSED_BILLING_DIR=C:/Users/AustinKidwell/ASR Dropbox/Austin Kidwell/08_Financial_PayrollOperations/Digital Billing Records (QB Organized)/Closed Billing

# ==============================================================================
# RELAY SERVER CONFIGURATION (Team Collaboration)
# ==============================================================================

# Enable relay server for team collaboration
# Set to true if you want multiple team members to upload documents
RELAY_ENABLED=false

# Port for relay server (team file uploads)
# Must be different from API_PORT
RELAY_PORT=8001

# Path to shared Dropbox folders for team collaboration
# This should be the path to your shared Dropbox folder
# Example for Windows: C:\Users\YourName\Dropbox\ASR_Shared
# Example for Mac/Linux: /Users/YourName/Dropbox/ASR_Shared
SHARED_DROPBOX_PATH=./shared_dropbox

# Network discovery port for client auto-discovery
# Must be different from API_PORT and RELAY_PORT
DISCOVERY_PORT=8002

# Interval between discovery broadcasts (seconds)
BROADCAST_INTERVAL=30

# Timeout for relay server operations (seconds)
RELAY_TIMEOUT=30

# Port of main ASR application (usually same as API_PORT)
MAIN_APP_PORT=8000

# ==============================================================================
# DEPLOYMENT SETTINGS (Production)
# ==============================================================================

# Render.com environment detection
# This is automatically set by Render.com
RENDER=false

